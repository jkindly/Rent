@model Rent.ViewModels.NewRentCarViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>
<script>
    $(document).ready(function () {
        jQuery.datetimepicker.setLocale('pl');
        $(".date-input").datetimepicker();
    });
</script>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>RentCarsCar</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.RentCar.RentStarTime, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RentCar.RentStarTime, new { htmlAttributes = new { @class = "form-control  date-input" } })
                @Html.ValidationMessageFor(model => model.RentCar.RentStarTime, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.RentCar.RentEndTime, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RentCar.RentEndTime, new { htmlAttributes = new { @class = "form-control  date-input" } })
                @Html.ValidationMessageFor(model => model.RentCar.RentEndTime, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.RentCar.CarId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.RentCar.CarId, new SelectList(Model.Cars, "Id", "RegistrationNumber"), "Wybierz pojazd", new { @class = "form-control" })
            </div>
        </div>        
        
        <div class="form-group">
            @Html.LabelFor(model => model.RentCar.CustomerId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.RentCar.CustomerId, new SelectList(Model.Customers, "Id", "FullName"), "Wybierz klienta", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
